<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemData"
            type="com.vershininds.mixture.sample.data.SampleObject" />

        <import type="com.vershininds.mixture.sample.presentation.modules.rx2interactor.view.adapters.ActionType" />

        <variable
            name="actionHandler"
            type="com.vershininds.mixture.sample.presentation.common.dbadapter.listener.ActionClickListener" />

    </data>

    <RelativeLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clickable="true"
        android:enabled="false"
        android:focusable="true"
        android:padding="16dp"
        app:actionHandler="@{actionHandler}"
        app:actionType="@{ActionType.CLICK}"
        app:model="@{itemData}">

        <TextView
            android:id="@+id/txt_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@{itemData.name}"
            android:textSize="18sp"
            tools:text="name" />
    </RelativeLayout>
</layout>